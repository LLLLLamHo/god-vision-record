{
    "compilerOptions": {
        "allowJs": true,
        "importHelpers": true,
        "declaration" : true,
        "moduleResolution": "Classic",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "src",
        "target": "es5",
        "outDir": "./dist",
        "lib": ["es6", "es5", "dom"],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}